<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:cons="clr-namespace:DirOpusReImagined;assembly=DirOpusReImagined"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DirOpusReImagined.MainWindow"
        Title="DirOpusReImagined">
	<Grid >
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.45*"/>
			<ColumnDefinition Width="0.1*"/>
			<ColumnDefinition Width="0.45*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="22"/>
			<RowDefinition Height="0.7*"/>
			<RowDefinition Height="0.2*"/>
		</Grid.RowDefinitions>

		<!-- The content of your columns goes here. 
             Remember to specify Grid.Column="0", Grid.Column="1", etc. -->
		<TextBlock Grid.Column="0" Text="File Path For Left Column"/>
		<TextBlock Grid.Column="1" Grid.Row="1" Text="Column 2 "/>
		<TextBlock Grid.Column="2" Text="File Path For Right Column"/>

		<cons:TAIDataGrid  Margin="4" Name="LPgrid" Grid.Column="0" Grid.Row="1" />

		<cons:TAIDataGrid  Margin="4" Name="RPgrid" Grid.Column="2" Grid.Row="1" />
		
		

		<TextBlock Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Text="The Button Panel will be here"/>


	</Grid>
</Window>
