<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="150"
        Width="320" Height="150" 
        WindowStartupLocation="CenterScreen"
        x:Class="DirOpusReImagined.MessageBox"
        Title="MessageBox">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="messageTextBlock" TextWrapping="Wrap" Text="TextBlock" Grid.Row="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="okButton" Content="OK" Grid.Row="1" HorizontalAlignment="Center" />
    </Grid>
</Window>
